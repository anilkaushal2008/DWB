@{
    Layout = null;
    var printUrl = Url.Action("Print", "Triage", new { id = ViewBag.AssessmentId });
    var listUrl = Url.Action("EmergencyPatient", "Triage");
}

<!DOCTYPE html>
<html>
<head>
    <title>Saved Successfully</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .success-card {
            background: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            text-align: center;
            max-width: 500px;
            width: 90%;
        }

        .icon-box {
            font-size: 50px;
            color: #198754;
            margin-bottom: 20px;
        }
    </style>

    <script>
        window.onload = function () {
            // 1. Try to open the Print Window
            var win = window.open('@printUrl', '_blank');

            // 2. Check if popup blocked
            if (!win || win.closed || typeof win.closed == 'undefined') {
                document.getElementById('blocked-msg').style.display = 'block';
            }

            // 3. Redirect after 5 seconds (Time to read)
            // You can remove this setTimeout block if you prefer to click "Back" manually
            setTimeout(function() {
                window.location.href = '@listUrl';
            }, 5000);
        };
    </script>
</head>
<body>

    <div class="success-card">
        <div class="icon-box">✅</div>
        <h2 class="mb-3">Assessment Saved!</h2>
        <p class="text-muted mb-4">The print preview has opened in a new tab.</p>

        <div id="blocked-msg" class="alert alert-warning" style="display:none; font-size:14px;">
            <strong>Popup Blocked!</strong> Your browser blocked the print window.<br />
            <a href="@printUrl" target="_blank" class="fw-bold">Click here to open Print</a>
        </div>

        <div class="d-grid gap-2">
            <a href="@listUrl" class="btn btn-primary btn-lg">Back to Patient List</a>
            <a href="@printUrl" target="_blank" class="btn btn-outline-secondary btn-sm">Re-open Print</a>
        </div>

        <div class="mt-3 text-muted small">
            Redirecting in 5 seconds...
        </div>
    </div>

</body>
</html>