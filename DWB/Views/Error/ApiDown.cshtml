@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>API Connection Error</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f5f7fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .error-card {
            max-width: 500px;
            margin: 90px auto;
            padding: 45px;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0px 8px 25px rgba(0,0,0,0.1);
            text-align: center;
        }

        .error-icon {
            font-size: 70px;
            color: #e63946;
            animation: pulse 1.5s infinite alternate;
        }

        @@keyframes pulse {
            0%

        {
            transform: scale(1);
            opacity: 0.8;
        }

        100% {
            transform: scale(1.15);
            opacity: 1;
        }

        }

        .retry-btn {
            margin-top: 25px;
            padding: 12px 28px;
            border-radius: 50px;
        }
    </style>
</head>

<body>

    <div class="error-card">
        <div class="error-icon">⚠</div>
        <h2 class="mt-4"> Connection Failed</h2>
        @if (TempData["Error"] != null)
        {
            <p class="text-danger mt-3">@TempData["Error"]</p>
        }
        <p class="text-muted mt-3">
            Our system is unable to connect to the backend webhook.
            This usually happens when the webhook server is offline or unreachable.
        </p>

        <a href="/Home/Index" class="btn btn-danger retry-btn">
            🔄 Try Again
        </a>       
        <p class="mt-3 text-secondary small">
            If the problem continues, please contact the administrator/IT Team.
        </p>
    </div>

</body>
</html>
