@model DWB.Models.TblRoleMas

<div class="modal-header bg-primary">
    <h5 class="modal-title">@(Model?.IntId > 0 ? "Edit Role" : "Create Role")</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="card">
    <div class="card-body">
        <form id="roleForm" asp-action="@(Model?.IntId > 0 ? "RoleEdit" : "RoleCreate")" asp-controller="Master" method="post">
            <div class="modal-body">
                @if(Model?.IntId > 0)
                {
                    <input type="hidden" asp-for="IntId" />                   
                }
                <div class="mb-3">
                    <label class="form-label">Role:</label>
                    <input asp-for="VchRole" required class="form-control" placeholder="Enter role name" />
                    <span asp-validation-for="VchRole" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </form>
    </div>
</div>


