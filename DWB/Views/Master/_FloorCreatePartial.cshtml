@model DWB.Models.TblFloorMaster

<div class="modal-header bg-primary">
    <h5 class="modal-title">@(Model?.IntId > 0 ? "Edit Floor" : "Create Floor")</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="card">
    <div class="card-body">
        <form id="floorForm" asp-action="@(Model?.IntId > 0 ? "FloorEdit" : "FloorCreate")" asp-controller="Master" method="post">
            <div class="modal-body">
                @if (Model?.IntId > 0)
                {
                    <input type="hidden" asp-for="IntId" />
                    <input type="hidden" asp-for="IntUnitCode" />
                }
                <div class="mb-3">
                    <label class="form-label">Floor:</label>
                    <input asp-for="VchFloor" required class="form-control" placeholder="Enter floor name" />
                    <span asp-validation-for="VchFloor" class="text-danger"></span>
                </div>   
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </form>
    </div>
</div>

    
