@model DWB.Models.CreateUserViewModel

<style>
    .company-card {
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 12px;
        transition: all 0.2s ease-in-out;
    }

    .required-label::after {
        content: " *";
        color: red;
    }

    .doctor-code-input {
        display: none;
        margin-left: 10px;
    }
    /* for upload files */
    .profile-upload, .signature-upload {
        position: relative;
        width: 120px;
        height: 120px;
        border-radius: 50%;
        overflow: hidden;
        border: 2px solid #ccc;
        cursor: pointer;
        background-color: #f9f9f9;
    }

        .profile-upload img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .signature-upload {
        width: 300px;
        height: 100px;
        border-radius: 6px;
    }

        .signature-upload img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

    /*    input[type="file"] {
                display: block;
            } */


</style>

<form id="userForm" enctype="multipart/form-data" asp-action="@(Model.IntUserId > 0 ? "EditUser" : "CreateUser")" asp-controller="UserMaster" method="post">
    @Html.AntiForgeryToken()

    <div class="modal-header bg-primary text-white">
        <h5 class="modal-title">@((Model.IntUserId > 0) ? "Edit User" : "Create User")</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        @if (TempData["Success"] != null)
        {
            <br />
            <div class="alert alert-success border-0 bg-success alert-dismissible fade show">
                <div class="text-white align-content-center">@TempData["Success"]</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <br />
            <div class="alert alert-danger border-0 bg-danger alert-dismissible fade show">
                <div class="text-white align-content-center">@TempData["Error"]</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="row">
            <div class="col-md-6 form-group">
                <label asp-for="VchUsername" class="form-label required-label"></label>
                @if (Model.IntUserId > 0)
                {
                    <input asp-for="VchUsername" class="form-control" readonly="readonly" placeholder="Enter user name" />
                }
                else
                {
                    <input asp-for="VchUsername" class="form-control" placeholder="Enter user name" />
                }
                <span asp-validation-for="VchUsername" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="HpasswordHash" class="form-label required-label"></label>
                <input asp-for="HpasswordHash" type="password" class="form-control" />
                <span asp-validation-for="HpasswordHash" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group">
                <label asp-for="VchFullName" class="form-label required-label"></label>
                <input asp-for="VchFullName" class="form-control" />
                <span asp-validation-for="VchFullName" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="VchEmail" class="form-label required-label"></label>
                <input asp-for="VchEmail" class="form-control" />
                <span asp-validation-for="VchEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group">
                <label asp-for="VchMobile" class="form-label required-label"></label>
                <input asp-for="VchMobile" class="form-control" />
                <span asp-validation-for="VchMobile" class="text-danger"></span>
            </div>


            <div class="col-md-6 form-group">
                <label class="form-label required-label">Select role</label>
                <select asp-for="FkRoleId" class="form-select" asp-items="ViewBag.RoleList">
                    <option value="">-- Select Role --</option>
                </select>
                <span asp-validation-for="FkRoleId" class="text-danger"></span>
            </div>
        </div>

        <hr />

        <div class="row">
            <!-- Profile Upload -->
            <div class="col-md-6">
                <div class="flex flex-col items-center">
                    <label>Profile Image</label>
                    <label class="profile-upload">
                        <img id="profileImagePreview" src="https://placehold.co/200x200/cccccc/333333?text=Profile" />
                        <input asp-for="ProfileFile" type="file" id="ProfileFileInput" accept="image/jpeg" style="display:none;" />
                    </label>
                </div>
            </div>

            <div class="col-md-6">
                <div class="flex flex-col items-center">
                    <label>Signature</label>
                    <label class="signature-upload">
                        <img id="signatureImagePreview" src="https://placehold.co/300x100/cccccc/333333?text=Signature" />
                        <input asp-for="SignatureFile" type="file" id="SignatureFileInput" accept="image/jpeg" style="display:none;" />
                    </label>
                </div>
            </div>
           @*  <div class="mb-3">
                <label asp-for="ProfileFile" class="form-label"></label>
                <input asp-for="ProfileFile" type="file" id="ProfileFileInput" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.ProfilePath))
                {
                    <img src="@Model.ProfilePath" class="img-thumbnail mt-2" style="max-height:100px;" />
                }
            </div>

            <div class="mb-3">
                <label asp-for="SignatureFile" class="form-label"></label>
                <input asp-for="SignatureFile" type="file" id="ProfileFileInput" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.SignaturePath))
                {
                    <img src="@Model.SignaturePath" class="img-thumbnail mt-2" style="max-height:100px;" />
                }
            </div> *@
        </div>


        <hr />
        <div class="row border p-2 rounded">
            <h6 align="center" style="color:darkorange">Assign company (For consultant add HMS doctor code)</h6>
            <hr />
            @for (int i = 0; i < Model.UserCompanies.Count; i++)
            {

                <div class="col-md-6 mb-3">
                    <div class="company-row">
                        <div class="form-check">
                            <input asp-for="UserCompanies[i].IsSelected"
                                   type="checkbox"
                                   class="form-check-input company-checkbox"
                                   onclick="toggleDoctorCode($(this))" />
                            @*for get isselecetd on post *@ 
                                    <input type="hidden" asp-for="UserCompanies[i].IsSelected" />
                            <label class="form-check-label fw-bold" for="company_@i">
                                @Model.UserCompanies[i].CompanyName
                            </label>
                        </div>


                        <input asp-for="UserCompanies[i].VchDoctorCode"
                               class="form-control form-control-sm doctor-code-input"
                               placeholder="Enter Doctor Code (optional)" />
                        <input asp-for="UserCompanies[i].CompanyId" type="hidden" name="UserCompanies[@i].CompanyId" value="@Model.UserCompanies[i].CompanyId" />
                        <input asp-for="UserCompanies[i].CompanyName" type="hidden" name="UserCompanies[@i].CompanyName" value="@Model.UserCompanies[i].CompanyName" />
                    </div>
                </div>
            }
        </div>
    </div>

        <div class="modal-footer">
            <button type="submit" class="btn btn-success">@((Model.IntUserId > 0) ? "Update" : "Create")</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
</form>

