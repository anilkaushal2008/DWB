<script type="text/javascript">    


    // Run immediately when partial loads
    (function () {
        // Pre-show for edit mode
        $(".company-checkbox").each(function () {
            toggleDoctorCode($(this));
        });

        // Handle change event
        $(".company-checkbox").on("change", function () {
            toggleDoctorCode($(this));
        });

        function toggleDoctorCode(checkbox) {
            var input = checkbox.closest(".company-row").find(".doctor-code-input");
            if (checkbox.is(":checked")) {
                input.show();
            } else {
                input.hide().val("");
            }
        }
    })();
    //for file upload
       document.getElementById("ProfileFileInput").addEventListener("change", function(e){
        const file = e.target.files[0];
        if(file) document.getElementById("profileImagePreview").src = URL.createObjectURL(file);
    });

    document.getElementById("SignatureFileInput").addEventListener("change", function(e){
        const file = e.target.files[0];
        if(file) document.getElementById("signatureImagePreview").src = URL.createObjectURL(file);
    });

    //post function to post file to controller.
     $(function () {
            $("#userForm").submit(function (e) {
                e.preventDefault();
                //check companies before sending AJAX
                if ($(".company-checkbox:checked").length === 0) {
                    alert("Please select at least one company.");
                    return false;
                }   
                var formData = new FormData(this);
                $.ajax({
                    url: $(this).attr("action"),
                    type: "POST",
                    data: formData,                    
                    processData: false,
                    contentType: false,
                    success: function (result) {
                        if (result.success) {
                            $("#newModal").modal("hide");
                            location.reload();
                        } else {
                            $("#modal-content-placeholder").html(result);
                            $.validator.unobtrusive.parse("#userForm");
                        }
                    }
                });
            });
        });
</script>
