    //for file upload
       document.getElementById("ProfileFileInput").addEventListener("change", function(e){
        const file = e.target.files[0];
        if(file) document.getElementById("profileImagePreview").src = URL.createObjectURL(file);
    });

    document.getElementById("SignatureFileInput").addEventListener("change", function(e){
        const file = e.target.files[0];
        if(file) document.getElementById("signatureImagePreview").src = URL.createObjectURL(file);
    });
       function toggleDoctorCode(checkbox) {
        // Find the parent .company-row
        var row = checkbox.closest(".company-row");

        // Find BOTH inputs within that row
        var docCodeInput = row.find(".doctor-code-input");
        var timingInputDiv = row.find(".timing-inputs"); // <-- This is the new line

        if (checkbox.is(":checked")) {
            docCodeInput.show();
            timingInputDiv.show(); // <-- This is the new line that shows the timing
        } else {
            docCodeInput.hide().val("");

            // Hide and clear all timing inputs
            timingInputDiv.hide();
            timingInputDiv.find("input[type='checkbox']").prop('checked', false);
            timingInputDiv.find("input[type='time']").val("");
        }
    }
    //post function to post file to controller.
     $(function () {
            $("#userForm").submit(function (e) {
                e.preventDefault();
                //check companies before sending AJAX
                if ($(".company-checkbox:checked").length === 0) {
                    alert("Please select at least one company.");
                    return false;
                }   
                var formData = new FormData(this);
                $.ajax({
                    url: $(this).attr("action"),
                    type: "POST",
                    data: formData,                    
                    processData: false,
                    contentType: false,
                    success: function (result) {
                        if (result.success) {
                            $("#newModal").modal("hide");
                            location.reload();
                        } else {
                            $("#modal-content-placeholder").html(result);
                            $.validator.unobtrusive.parse("#userForm");
                        }
                    }
                });
            });
        });
</script>
