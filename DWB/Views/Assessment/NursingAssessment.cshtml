@model List<DWB.APIModel.SP_OPD>
@{
    ViewData["Title"] = "Nursing Assessment";
}
<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
@* for date range *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
<main class="main-wrapper">   
    <div class="main-content">      
            <div class="row cols-12">
            <div class="col">
<h4 class="mb-4">Nursing Assessment - Today's Patients</h4>
<hr />
<div class="card">
 <div class="card-body">
                        <form method="get" asp-action="NursingAssessment" asp-controller="Assessment" class="row g-2 mb-3">
                            <div class="col-md-4">
                                <label for="daterange" class="form-label">Select Date Range</label>
                                <input type="text" id="daterange" name="daterange" class="form-control" autocomplete="off"
                                       value="select date range" />
                            </div>
                            <div class="col-md-3 align-self-end">
                                <button type="submit" class="btn btn-success">Filter</button>
                                <a href="@Url.Action("NursingAssessment", "Assessment")" class="btn btn-secondary">Clear</a>
                            </div>
                        </form>
  <table id="nursingTable" class="table table-responsive table-striped table-bordered" style="width:100%;font-size:90%">
    <thead class="bg-primary" style="font-weight:bolder">
        <tr>
            <th>OPD No</th>
            <th>Patient Name</th>
            <th>OPD Date</th>
            <th>Consultant</th>
            <th>Action</th>           
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
        {
            <tr>
                <td>@p.opdno</td>
                <td>@p.pname</td>
                <td>@p.jdate.ToString("dd/MM/yyyy")</td>
                <td>@p.descript</td>
                <td><a class="btn btn-primary btn-sm" href="@Url.Action("","",new{uhid=p.opdno})">Fill</a></td>
            </tr>          
        }                       
    </tbody>
</table>
</div>
</div>
</div>
</div>
</div>
</main>
@section scripts {
   <script src="/assets/js/dashboard1.js"></script>
   <script src="~/assets/js/bootstrap.bundle.min.js"></script>
