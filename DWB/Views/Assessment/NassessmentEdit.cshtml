@model TblNsassessment

@{ 
    ViewData["Title"] = "Edit Nursing Assessment";
}
<style>
    /* Custom styles for the dashed border */
    .border-dashed {
        border-style: dashed !important;
    }
    /* Style for file list items */
    .file-list-item {
        background-color: #f8f9fa; /* Light background */
        border: 1px solid #e9ecef; /* Light border */
        border-radius: 0.5rem; /* Rounded corners */
        padding: 0.75rem 1rem;
        margin-bottom: 0.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075); /* Subtle shadow */
    }

        .file-list-item span {
            font-weight: 500;
            color: #343a40;
        }

    .btn-close {
        font-size: 0.8rem;
    }

    /* Custom gradient button style */
    .btn-grd {
        background: linear-gradient(45deg, #ffc107, #ff8c00); /* Yellow to Orange gradient */
        border: none;
        color: white;
        font-weight: bold;
    }

        .btn-grd:hover {
            opacity: 0.9; /* Slightly dim on hover */
            color: white;
        }

</style>

<main class="main-wrapper">
    <div class="main-content">
        <div class="row cols-12">
            <div class="col">
                <h4 class="mb-3">Edit Nursing Assessment Form</h4>
                <div class="card">
                    @if (TempData["Success"] != null)
                    {
                        <br />
                        <div class="alert alert-success border-0 bg-success alert-dismissible fade show">
                            <div class="text-white align-content-center">@TempData["Success"]</div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <br />
                        <div class="alert alert-danger border-0 bg-danger alert-dismissible fade show">
                            <div class="text-white align-content-center">@TempData["Error"]</div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="card-body">
                        <form method="post" id="NassessmentEdit" enctype="multipart/form-data" asp-action="NassessmentEdit" asp-controller="Assessment">
                            <input type="hidden" asp-for="DtStartTime" />
                            <div class="card p-4 border-top border-secondary shadow rounded-3 mb-4 bg-light">
                                <h5 class="mb-3 border-bottom pb-2 text-secondary">👤 Patient Details</h5>
                                <input type="hidden" asp-for="IntAssessmentId" />
                                <div class="row g-3">
                                    <div class="col-md-2">
                                        <label asp-for="VchUhidNo" class="form-label fw-bold">UHID No</label>
                                        <input asp-for="VchUhidNo" class="form-control bg-gradient" readonly />
                                    </div>

                                    <div class="col-md-2">
                                        <label asp-for="IntIhmsvisit" class="form-label fw-bold">Visit No</label>
                                        <input asp-for="IntIhmsvisit" class="form-control bg-gradient" readonly />
                                    </div>

                                    <div class="col-md-3">
                                        <label asp-for="VchHmsname" class="form-label fw-bold">Name</label>
                                        <input asp-for="VchHmsname" class="form-control bg-gradient" readonly />
                                    </div>

                                    <div class="col-md-1">
                                        <label asp-for="VchHmsage" class="form-label fw-bold">Age</label>
                                        <input asp-for="VchHmsage" class="form-control bg-gradient" readonly />
                                    </div>

                                    <div class="col-md-2">
                                        <label asp-for="VchHmsdtEntry" class="form-label fw-bold">Entry Date</label>
                                        <input asp-for="VchHmsdtEntry" class="form-control bg-gradient" readonly />
                                    </div>

                                    <div class="col-md-2">
                                        <label asp-for="VchIhmintime" class="form-label fw-bold">In Time</label>
                                        <input asp-for="VchIhmintime" class="form-control bg-gradient" readonly />
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="VchHmsconsultant" class="form-label fw-bold">Consultant</label>
                                        <input asp-for="VchHmsconsultant" class="form-control bg-gradient" readonly />
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="VchHmscategory" class="form-label fw-bold">Category</label>
                                        <input asp-for="VchHmscategory" class="form-control bg-gradient" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="card p-4 shadow-sm border-start border-primary border-3 mb-4">
                                <h5 class="mb-3 text-primary">💓 Vital Signs</h5>
                                <div class="row g-3">
                                    <div class="col-md-3"><label asp-for="VchBloodPressure" class="form-label">BP(/Mmhg)</label><input asp-for="VchBloodPressure" class="form-control" /><span asp-validation-for="VchBloodPressure" class="text-danger"></span></div>
                                    <div class="col-md-3"><label asp-for="VchPulse" class="form-label">Pulse(/Min)</label><input asp-for="VchPulse" class="form-control" /><span asp-validation-for="VchPulse" class="text-danger"></span></div>
                                    <div class="col-md-3"><label asp-for="DecTemperature" class="form-label">Temperature(°F)</label><input asp-for="DecTemperature" class="form-control" /><span asp-validation-for="DecTemperature" class="text-danger"></span></div>
                                    <div class="col-md-3"><label asp-for="DecSpO2" class="form-label">SpO2(%age)</label><input asp-for="DecSpO2" class="form-control" /><span asp-validation-for="DecSpO2" class="text-danger"></span></div>
                                    <div class="col-md-3"><label asp-for="DecWeight" class="form-label">Weight(Kg)</label><input asp-for="DecWeight" class="form-control" /><span asp-validation-for="DecWeight" class="text-danger"></span></div>
                                    <div class="col-md-3"><label asp-for="DecHeight" class="form-label">Height(CM)</label><input asp-for="DecHeight" class="form-control" /><span asp-validation-for="DecHeight" class="text-danger"></span></div>
                                    <div class="col-md-3"><label asp-for="DecRespiratoryRate" class="form-label">Respiratory Rate(/Min)</label><input asp-for="DecRespiratoryRate" class="form-control" /> <span asp-validation-for="DecRespiratoryRate" class="text-danger"></span></div>
                                    <div class="col-md-3"><label asp-for="DecOxygenFlowRate" class="form-label">O₂ Flow Rate</label><input asp-for="DecOxygenFlowRate" class="form-control" /><span asp-validation-for="DecOxygenFlowRate" class="text-danger"></span></div>
                                </div>
                            </div>

                            <div class="card p-4 shadow-sm border-start border-success border-3 mb-4">
                                <h5 class="mb-3 text-success">🧬 Personal History</h5>
                                <div class="row g-3 align-items-center">
                                    <div class="col-md-3">
                                        <div class="form-check d-flex align-items-center">
                                            <input asp-for="BitIsAllergical" type="checkbox" class="form-check-input me-2" id="allergyToggle" />
                                            <label class="form-check-label fw-bold mb-0" for="allergyToggle">Allergies</label>
                                        </div>
                                    </div>

                                    <div class="col-md-9" id="allergyRemarks" style="display:none;">
                                        <label asp-for="VchAllergicalDrugs" class="form-label fw-bold">If yes, list drugs/foods</label>
                                        <input asp-for="VchAllergicalDrugs" class="form-control" />
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-check d-flex align-items-center">
                                            <input asp-for="BitIsAlcoholic" type="checkbox" class="form-check-input me-2" />
                                            <label class="form-check-label fw-bold mb-0">Alcohol</label>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-check d-flex align-items-center">
                                            <input asp-for="BitIsSmoking" type="checkbox" class="form-check-input me-2" />
                                            <label class="form-check-label fw-bold mb-0">Smoking</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="VchLmpForFemale" class="form-label fw-bold">LMP(Females)</label>
                                        <input asp-for="VchLmpForFemale" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="card p-4 shadow-sm border-start border-danger border-3 mb-4">
                                <h5 class="mb-3 text-danger">🩺 Past History</h5>
                                <div class="row g-3">
                                    <div class="col-md-3"><div class="form-check"><input asp-for="BitDiabetes" type="checkbox" class="form-check-input me-2" /><label class="form-check-label fw-bold">Diabetes</label></div></div>
                                    <div class="col-md-3"><div class="form-check"><input asp-for="BitHeartDisease" type="checkbox" class="form-check-input me-2" /><label class="form-check-label fw-bold">Heart Disease</label></div></div>
                                    <div class="col-md-3"><div class="form-check"><input asp-for="BitHypertension" type="checkbox" class="form-check-input me-2" /><label class="form-check-label fw-bold">Hypertension</label></div></div>
                                    <div class="col-md-3"><div class="form-check"><input asp-for="BitAsthma" type="checkbox" class="form-check-input me-2" /><label class="form-check-label fw-bold">Asthma</label></div></div>
                                    <div class="col-md-3"><div class="form-check"><input asp-for="BitCholesterol" type="checkbox" class="form-check-input me-2" /><label class="form-check-label fw-bold">High Cholesterol</label></div></div>
                                    <div class="col-md-3"><div class="form-check"><input asp-for="BitTuberculosis" type="checkbox" class="form-check-input me-2" /><label class="form-check-label fw-bold">Tuberculosis</label></div></div>
                                    <div class="col-md-3"><div class="form-check"><input asp-for="BitSurgery" type="checkbox" class="form-check-input me-2" /><label class="form-check-label fw-bold">Surgery</label></div></div>
                                    <div class="col-md-3"><div class="form-check"><input asp-for="BitHospitalization" type="checkbox" class="form-check-input me-2" /><label class="form-check-label fw-bold">Hospitalized (last 3 mo)</label></div></div>
                                    <div class="col-md-12">
                                        <label asp-for="VchOtherHistory" class="form-label fw-bold">Other History</label>
                                        <input asp-for="VchOtherHistory" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="card p-4 shadow-sm border-start border-warning border-3 mb-4">
                                <h5 class="mb-3 text-warning">🧠 Psychosocial Details</h5>
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <label class="form-label fw-bold">Occupation</label>
                                        <input asp-for="VchOccupation" type="text"  class="form-control" required="required" placeholder="Enter occupation" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label fw-bold">Social Economic Status</label>
                                        <input asp-for="VchSocialEconomicStatus" type="text"  class="form-control" placeholder="Enter SES" />
                                    </div>

                                    <div class="col-md-3">
                                        <label class="form-label fw-bold">Family Support</label>
                                        <input asp-for="VchFamilySupport" type="text"  class="form-control"  placeholder="e.g. Good / Poor" />
                                    </div>
                                    <div class="col-md-3">
                                        <label asp-for="VchPsychologicalStatus" class="form-label fw-bold">Psychological Status</label>
                                        <select asp-for="VchPsychologicalStatus" class="form-select">
                                            <option value="">Select</option>
                                            <option value="Calm">Calm</option>
                                            <option value="Anxiety">Anxiety</option>
                                            <option value="Confused">Confused</option>
                                            <option value="Agitated">Agitated</option>
                                            <option value="Depressed">Depressed</option>
                                        </select>
                                        <span asp-validation-for="VchPsychologicalStatus" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card p-4 shadow-sm border-start border-info border-3 mb-4">
                                <h5 class="mb-3 text-info">🧾 Additional Observations</h5>
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <label class="fw-bold">Pain Score (0–10)</label>
                                        <select asp-for="IntPainScore" class="form-select">
                                            <option value="">Select</option>
                                            @for (int i = 0; i <= 10; i++)
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-check d-flex align-items-center">
                                            <input asp-for="BitFallRisk" type="checkbox" class="form-check-input me-2" id="fallRiskToggle" />
                                            <label class="form-check-label fw-bold mb-0" for="fallRiskToggle">Fall Risk</label>
                                        </div>
                                    </div>
                                    <div class="col-md-9" id="fallRiskRemarks" style="display:none;">
                                        <label asp-for="VchFallRiskRemarks" class="form-label fw-bold">Remarks (if Fall Risk)</label>
                                        <input asp-for="VchFallRiskRemarks" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="card p-4 shadow-sm border rounded mb-4">
                                <label asp-for="VchNurseNotes" class="form-label fw-bold">🖊️ Nurse Notes</label>
                                <textarea asp-for="VchNurseNotes" class="form-control" rows="4" placeholder="Enter nurse notes..."></textarea>
                            </div>
                            <!-- Existing Docs -->
                            
                                @if(Model.TblNassessmentDoc != null && Model.TblNassessmentDoc.Any())
{
                                <div class="card p-4 shadow-sm border rounded mb-4">
                                    <label class="form-label fw-bold">
                                        Existing Documents <span style="color:orangered;font-weight:400">
                                            (These will deleted automatically when you upload new document other wise it will same)
                                        </span>
                                    </label>
                                    <ul class="list-group">
                                        @foreach (var doc in Model.TblNassessmentDoc)
                                        {
                                            <li class="list-group-item">
                                                <a>@doc.VchFileName</a>
                                                <a class="btn btn-outline-info btn-sm" href="@Url.Content("~/uploads/NAssessment/" + doc.VchFileName)" target="_blank">                                                    
                                                View</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                                }
                                else
                                {
                                <div class="card p-4 shadow-sm border rounded mb-4">
                                    <label class="form-label fw-bold">
                                        Existing document <span style="color:orangered;font-weight:400">
                                            (No supporting documents were uploaded for this assessment.)
                                        </span>
                                    </label>
                                </div>
                                }
                            
                            <!-- Integrated Drag and Drop File Upload Section -->
                            <div class="mb-4 p-4 border rounded-4 shadow-sm bg-white">
                                <label class="form-label fw-bold fs-5 text-primary mb-3">
                                    <i class="fas fa-paperclip me-2"></i>Upload New Supporting Documents
                                </label>
                                <div id="drop-zone" class="border border-3 border-dashed border-info p-5 text-center bg-light rounded-4 shadow-sm" style="cursor: pointer; transition: all 0.2s ease-in-out;">
                                    <p class="mb-3 text-info"><i class="fas fa-cloud-upload-alt fa-4x"></i></p>
                                    <p class="mb-1 fw-bold text-info fs-5">Drag & drop your files here</p>
                                    <p class="small text-info mb-0">or click to browse</p>
                                    <!-- Hidden file input - 'name' attribute is crucial for server-side binding -->
                                    <!-- The 'name' attribute should match the parameter name in your ASP.NET Core controller action -->
                                    <input type="file" name="supportDocsI" id="supportDocsInput" class="form-control d-none" accept=".jpg,.jpeg,.pdf" multiple />
                                </div>
                                <div class="mt-3 text-muted text-center" style="font-size: 0.875rem;">
                                    Supported file types: JPG, PDF. Maximum: 5 documents.
                                </div>
                                <div id="file-list" class="mt-4">
                                    <!-- Selected file names will be dynamically displayed here -->
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-grd btn-grd-warning px-4 py-2 rounded-pill" style="transition: opacity 0.3s;" onmouseover="this.style.opacity=0.7" onmouseout="this.style.opacity=2">
                                    ✅ Submit Assessment
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {   
    <!-- Bootstrap JS Bundle (Popper included) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Get references to DOM elements
            const dropZone = document.getElementById('drop-zone');
            const fileInput = document.getElementById('supportDocsInput'); // Matches the ID in the HTML
            const fileListDiv = document.getElementById('file-list');
            const form = document.getElementById('NassessmentEdit'); // Get the form by its ID
            // Array to hold the File objects selected by the user
            let selectedFiles = [];
            const maxFiles = 5; // Maximum number of files allowed
            // --- Event Listeners ---
            // Handle click on the drop zone to trigger the hidden file input
            dropZone.addEventListener('click', () => fileInput.click());


            // Prevent default drag behaviors for the drop zone and document body
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, preventDefaults, false);
                document.body.addEventListener(eventName, preventDefaults, false); // Prevent browser default for entire page
            });

            // Add visual feedback when files are dragged over the drop zone
            dropZone.addEventListener('dragover', e => {
                dropZone.classList.add('border-primary'); // Highlight border
                dropZone.classList.remove('border-info'); // Remove default border color
            });


            // Remove visual feedback when files leave the drop zone or are dropped
            ['dragleave', 'drop'].forEach(eventName => {
                dropZone.classList.remove('border-primary'); // Remove highlight
                dropZone.classList.add('border-info'); // Revert to default border color
            });

            // Handle files dropped onto the drop zone
            dropZone.addEventListener('drop', e => {
                handleNewFiles(e.dataTransfer.files);
            });

            // Handle files selected via the traditional file input dialog
            fileInput.addEventListener('change', () => {
                handleNewFiles(fileInput.files);
                // Clear the file input's value to allow re-selection of the same file
                // This is important for the 'change' event to fire consistently
                fileInput.value = "";
            });

            // --- Core Functions ---
            // Prevents default browser behavior for drag-and-drop events
            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            // Processes new files (from drop or select) and updates the selectedFiles array
            function handleNewFiles(files) {
                const allowedTypes = ['application/pdf', 'image/jpeg'];
                // Iterate over the new files
                for (const file of files) {
                    // Check if max file limit is reached
                    if (selectedFiles.length >= maxFiles) {
                        alert(`You can only upload a maximum of ${maxFiles} files.`);
                        break; //Stop processing further files
                    }

                    // Validate file type
                    if (!allowedTypes.includes(file.type)) {
                        alert(`Invalid file type: "${file.name}". Only JPG and PDF are allowed.`);
                        continue; //Skip this file
                    }
                    // Check for duplicate files (by name and size)
                    if (!selectedFiles.some(f => f.name === file.name && f.size === file.size)) {
                        selectedFiles.push(file); // Add unique and valid file
                    } else {
                        alert(`File "${file.name}" is already selected.`);
                    }
                }
                renderFileList(); //Update the UI display
            }
            //Renders the current list of selected files in the UI
            function renderFileList() {
                fileListDiv.innerHTML = ''; //Clear existing list items
                selectedFiles.forEach((file, index) => {
                    const div = document.createElement('div');
                    div.className = 'file-list-item d-flex justify-content-between align-items-center bg-success border rounded-pill px-4 py-2 shadow-sm';
                    div.innerHTML = `<span class="text-dark fw-bold"><i class="fas fa-file-alt me-2 text-secondary"></i>${file.name}</span>
                        <button type="button" class="btn btn-close" aria-label="Remove" data-index="${index}"></button>`;
                    fileListDiv.appendChild(div);
                });

                //Attach event listeners to the dynamically created remove buttons
                fileListDiv.querySelectorAll('.btn-close').forEach(button => {
                    button.addEventListener('click', (e) => {
                        const indexToRemove = e.target.getAttribute('data-index');
                        selectedFiles.splice(indexToRemove, 1); // Remove file from array
                        renderFileList(); // Re-render the list
                    });
                });
            }


            // --- Form Submission Logic (Non-AJAX) ---
            // This event listener runs just before the form is submitted normally
            // It ensures that the 'fileInput' element contains all files from 'selectedFiles'
            if (form) { // Only attach if a form is found
                form.addEventListener("submit", function (e) {
                  // Create a new DataTransfer object to hold the files
                    const dataTransfer = new DataTransfer();
                    selectedFiles.forEach(file => {
                        dataTransfer.items.add(file); // Add each selected file
                    });
                    // Assign the new FileList to the hidden file input
                    fileInput.files = dataTransfer.files;
                    // The form will now submit normally with the files attached to 'fileInput'
                    // No e.preventDefault() here, as we want the form to submit
                });
            }
            else {
                console.warn("No parent <form> element found for the file upload section. Files might not be submitted correctly.");
            }
        });


          // Toggle visibility of remarks based on checkbox state
           function toggleVisibility(toggleId, targetId, inputId) {
            const toggle = document.getElementById(toggleId);
            const target = document.getElementById(targetId);
            const input = inputId ? document.getElementById(inputId) : null;
            function updateVisibility() {
                const show = toggle.checked;
                target.style.display = show ? "block" : "none";
                if (input) {
                    if (show) {
                              input.setAttribute("required", "required");
                    }
                    else
                    {
                        input.removeAttribute("required");
                    }
                }
            }
            toggle.addEventListener("change", updateVisibility);
            updateVisibility(); // initialize on load
        }
        window.addEventListener("DOMContentLoaded", function () {
            toggleVisibility("allergyToggle", "allergyRemarks");
            toggleVisibility("fallRiskToggle", "fallRiskRemarks");
        });

    </script>

}